@model TrainingViewModel

<h2>Przypisz użytkowników do szkolenia: @Model.TrainingTitle</h2>

<form asp-action="AssignTraining">
    <input type="hidden" asp-for="TrainingId" />
    <table class="table">
        <thead>
            <tr>
                <th>Użytkownik</th>
                <th>Przypisany</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Users.Count; i++)
            {
                <tr>
                    <td>@Model.Users[i].UserName</td>
                    <td>
                        <input type="hidden" asp-for="Users[i].Id" />
                        <input type="hidden" asp-for="Users[i].UserName" />
                        <input type="checkbox" asp-for="Users[i].IsAssigned" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
</form>