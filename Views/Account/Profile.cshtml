@model ProfileViewModel

<h2>Profil użytkownika</h2>

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["StatusMessage"]
    </div>
}

<div class="row">
    <div class="col-md-6">
        <h3>Dane użytkownika</h3>
        <dl class="row">
            <dt class="col-sm-3">Nazwa użytkownika</dt>
            <dd class="col-sm-9">@Model.UserName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Imię</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Nazwisko</dt>
            <dd class="col-sm-9">@Model.Lastname</dd>
        </dl>
    </div>
    <div class="col-md-6">
        <h3>Zmiana hasła</h3>
        <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrentPassword">Aktualne hasło</label>
                <input asp-for="CurrentPassword" class="form-control" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword">Nowe hasło</label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Potwierdź nowe hasło</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Zmień hasło</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}