@model IEnumerable<User>
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager



<h2>Lista pracowników</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Utwórz nowego pracownika</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            var isLockedOut = await UserManager.IsLockedOutAsync(user);
            <tr>
                <td>@user.Email</td>
                <td>@user.Name</td>
                <td>@user.Lastname</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">Szczegóły</a>
                    <a asp-action="AssignTrainings" class="btn btn-secondary">Przypisz szkolenia</a>
                    <a asp-action="ActivityLogs" asp-route-userId="@user.Id" class="btn btn-info" title="Historia aktywności">
                        <i class="bi bi-clock-history"></i>
                    </a>
                    <form asp-action="ToggleUserLock" asp-route-userId="@user.Id" method="post"
                          onsubmit="return confirm('Czy na pewno chcesz zablokować tego użytkownika?');"
                          style="display: inline;">
                        <button type="submit"
                                class="btn @(isLockedOut ? "btn-success" : "btn-danger") btn-sm"
                        @(user.UserName == User.Identity.Name ? "disabled" : "")>
                            @(isLockedOut ? "Odblokuj konto" : "Zablokuj konto")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
