@model ActivityLogsFilterViewModel

<h2>Historia aktywności wszystkich użytkowników</h2>

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-2">
                <label class="form-label">Użytkownik</label>
                <input type="text" class="form-control" name="UserName" value="@Model.UserName" />
            </div>

            <div class="col-md-2">
                <label class="form-label">Typ akcji</label>
                <select class="form-select" name="ActionType">
                    <option value="">Wszystkie</option>
                    @foreach (var actionType in ViewBag.ActionTypes)
                    {
                        <option value="@actionType" selected="@(Model.ActionType == actionType)">
                            @actionType
                        </option>
                    }
                </select>
            </div>

            <div class="col-md-2">
                <label class="form-label">Data od</label>
                <input type="date" class="form-control" name="DateFrom"
                       value="@(Model.DateFrom?.ToString("yyyy-MM-dd"))" />
            </div>

            <div class="col-md-2">
                <label class="form-label">Data do</label>
                <input type="date" class="form-control" name="DateTo"
                       value="@(Model.DateTo?.ToString("yyyy-MM-dd"))" />
            </div>

            <div class="col-md-2">
                <label class="form-label">Status</label>
                <select class="form-select" name="IsSuccess">
                    <option value="">Wszystkie</option>
                    <option value="true" selected="@(Model.IsSuccess == true)">Sukces</option>
                    <option value="false" selected="@(Model.IsSuccess == false)">Błąd</option>
                </select>
            </div>

            <div class="col-md-2 align-self-end">
                <button type="submit" class="btn btn-primary">Filtruj</button>
                <a href="@Url.Action("AllActivityLogs")" class="btn btn-secondary">Resetuj</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Użytkownik</th>
                    <th>Data i czas</th>
                    <th>Akcja</th>
                    <th>Status</th>
                    <th>Opis</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.Logs)
                {
                    <tr>
                        <td>@log.UserName</td>
                        <td>@log.Timestamp.ToLocalTime().ToString("dd.MM.yyyy HH:mm:ss")</td>
                        <td>@log.ActionType</td>
                        <td>
                            <span class="badge @(log.IsSuccess ? "bg-success" : "bg-danger")">
                                @(log.IsSuccess ? "Sukces" : "Błąd")
                            </span>
                        </td>
                        <td>@log.Description</td>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" href="@Url.Action("AllActivityLogs", new {
                                UserName = Model.UserName,
                                ActionType = Model.ActionType,
                                DateFrom = Model.DateFrom?.ToString("yyyy-MM-dd"),
                                DateTo = Model.DateTo?.ToString("yyyy-MM-dd"),
                                IsSuccess = Model.IsSuccess,
                                PageNumber = i,
                                PageSize = Model.PageSize
                            })">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>