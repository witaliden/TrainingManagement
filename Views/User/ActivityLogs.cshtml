@model IEnumerable<UserActivityLog>

<h2>Logi aktywności użytkownika @ViewBag.UserName</h2>

<table class="table">
    <thead>
        <tr>
            <th>Data i czas</th>
            <th>Akcja</th>
            <th>Status</th>
            <th>Opis</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.Timestamp.ToLocalTime()</td>
                <td>@log.ActionType</td>
                <td>
                    <span class="badge @(log.IsSuccess ? "bg-success" : "bg-danger")">
                        @(log.IsSuccess ? "Sukces" : "Błąd")
                    </span>
                </td>
                <td>@log.Description</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Details" asp-route-id="@ViewContext.RouteData.Values["userId"]" class="btn btn-secondary">Powrót</a>
</div>