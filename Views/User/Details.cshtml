@model UserDetailsViewModel

<h2>Szczegóły pracownika</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>Dane użytkownika</h3>
            </div>
            <div class="card-body">
                <form asp-action="Details" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" name="Id" value="@Model.User.Id" />

                    <div class="form-group mb-3">
                        <label>Email</label>
                        <input type="email" name="Email" class="form-control" value="@Model.User.Email" />
                    </div>

                    <div class="form-group mb-3">
                        <label>Imię</label>
                        <input type="text" name="Name" class="form-control" value="@Model.User.Name" />
                    </div>

                    <div class="form-group mb-3">
                        <label>Nazwisko</label>
                        <input type="text" name="Lastname" class="form-control" value="@Model.User.Lastname" />
                    </div>

                    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>Zmiana hasła</h3>
            </div>
            <div class="card-body">
                <form asp-action="ChangeUserPassword" method="post">
                    <input type="hidden" name="userId" value="@Model.User.Id" />
                    
                    <div class="form-group mb-3">
                        <label>Nowe hasło</label>
                        <input type="password" name="newPassword" class="form-control" required />
                    </div>

                    <div class="form-group mb-3">
                        <label>Potwierdź nowe hasło</label>
                        <input type="password" name="confirmPassword" class="form-control" required />
                    </div>

                    <button type="submit" class="btn btn-primary" disabled="@(!User.IsInRole("Admin"))">Zmień hasło</button>
                </form>
            </div>
        </div>
    </div>
    <div class="card mb-3">
        <div class="card-header">
            <h3>Ustawienia hasła</h3>
        </div>
        <div class="card-body">
            <form asp-action="SetPasswordExpiration" method="post">
                <input type="hidden" name="userId" value="@Model.User.Id" />
                <div class="form-group">
                    <label>Liczba dni ważności hasła</label>
                    <input type="number" name="daysValid" class="form-control" min="1" required />
                </div>
                <button type="submit" class="btn btn-primary mt-3">Ustaw ważność hasła</button>
            </form>
        </div>
    </div>
</div>

<div class="card mb-3">
    <div class="card-header">
        <h3>Zarządzanie kontem</h3>
    </div>
    <div class="card-body"> 
        <form asp-action="ToggleUserLock" method="post" style="display: inline;">
            <input type="hidden" name="userId" value="@Model.User.Id" />
            <button type="submit" class="btn @(Model.IsLockedOut ? "btn-success" : "btn-warning")"
            @(Model.User.UserName == User.Identity.Name ? "disabled" : "")>
                @(Model.IsLockedOut ? "Odblokuj konto" : "Zablokuj konto")
            </button>
        </form>

        <form asp-action="DeleteUser" method="post" style="display: inline;"
              onsubmit="return confirm('Czy na pewno chcesz usunąć tego użytkownika?');">
            <input type="hidden" name="userId" value="@Model.User.Id" />
            <button type="submit" class="btn btn-danger"
            @(Model.User.UserName == User.Identity.Name ? "disabled" : "")>
                Usuń konto
            </button>
        </form>
    </div>
</div>


<h3>Szkolenia</h3>

<table class="table">
    <thead>
        <tr>
            <th>Tytuł</th>
            <th>Status</th>
            <th>Data ukończenia</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ut in Model.UserTrainings)
        {
            <tr>
                <td>@ut.Training.Title</td>
                <td>@(ut.IsCompleted ? "Ukończone" : "W trakcie")</td>
                <td>@(ut.CompletionDateTime?.ToShortDateString() ?? "-")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AssignTrainings" asp-route-id="@Model.User.Id" class="btn btn-primary">Przypisz szkolenia</a>
<a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
